{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "greview",
  "version": "0.1.0",
  "identifier": "com.great-review.greview",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "greview â€” great-review",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": [],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "cli": {
      "args": [
        {
          "name": "range",
          "index": 1,
          "takesValue": true,
          "required": false
        },
        {
          "name": "remote",
          "short": "R",
          "takesValue": true,
          "required": false
        }
      ]
    }
  }
}
